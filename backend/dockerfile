FROM python:3.9-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8000

# Create media directory for video uploads
RUN mkdir -p /app/media

# Use gunicorn for production-like server inside container
ENV PYTHONUNBUFFERED=1
RUN python manage.py collectstatic --noinput || true
CMD ["gunicorn", "chittorgarh_vlog.wsgi:application", "--bind", "0.0.0.0:8000", "--workers", "3"]
